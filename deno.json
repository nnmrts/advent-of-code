{
	"tasks": {
		"run-solution": {
			"command": "deno run --allow-run=\"deno\" ./scripts/run-solution.js",
			"description": "runs a solution by giving it a path like 2025/01/1"
		},
		"reload": {
			"command": "deno run --allow-run=\"deno\" --allow-env=SESSION_ID --allow-net=adventofcode.com --env-file=.env ./scripts/reload.js",
			"description": "reloads the input for a specific day"
		},
		"lint": {
			"command": "deno x eslint",
			"description": "lints all code - add `--fix` to autofix autofixable problems"
		},
		"test": {
			"command": "deno test --allow-run=\"deno\" --allow-env=SESSION_ID --allow-net=adventofcode.com --env-file=.env --allow-read=\"tests,years\" --allow-write=\"tests\" --coverage --coverage-raw-data-only --clean --ignore=\"**/\\(*\\)/**\"",
			"description": "runs all the tests - add `-- --update` to update solution snapshots"
		},
		"coverage": {
			"command": "deno run --allow-run=\"deno\" --allow-read=\"coverage\" --allow-write=\"coverage\" ./scripts/report-coverage.js",
			"description": "generates coverage reports"
		},
		"test:coverage": {
			"command": "deno task test && deno task coverage",
			"description": "test and then generate coverage reports"
		},
		"check": {
			"command": "deno check",
			"description": "type checks all code"
		},
		"ready": {
			"description": "checks if everything is ready",
			"dependencies": [
				"test:coverage",
				"lint",
				"check"
			]
		}
	},
	"test": {
		"include": [
			"./tests/**/*.js"
		]
	},
	"imports": {
		"@pumpn/eslint-config": "jsr:@pumpn/eslint-config@^16.2.1",
		"@std/assert": "jsr:@std/assert@^1.0.17",
		"@std/fs": "jsr:@std/fs@^1.0.21",
		"@std/path": "jsr:@std/path@^1.1.4",
		"@std/testing": "jsr:@std/testing@^1.0.16"
	},
	"unstable": [
		"kv",
		"raw-imports",
		"tsgo"
	],
	"fmt": {
		"useTabs": true
	},
	"exclude": [
		"./coverage/**/*.js"
	],
	"compilerOptions": {
		"types": [
			"./types/global.d.ts"
		],
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"checkJs": true,
		"exactOptionalPropertyTypes": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"noErrorTruncation": true,
		"noFallthroughCasesInSwitch": false,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noPropertyAccessFromIndexSignature": false,
		"noUncheckedIndexedAccess": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"strict": true,
		"lib": [
			"deno.ns",
			"deno.unstable",
			"dom",
			"dom.iterable"
		]
	}
}